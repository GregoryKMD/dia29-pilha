public class Main {

 static int cont = 0;

 private No base;
 private No topo;
 private String NomeDaPilha;

 public Main(String nome){
   NomeDaPilha = nome;

   base = topo = null;

 }

 public Main(){
   NomeDaPilha = "Pilha teste";
   base = topo = null;

 }

 public void Empilhar(String item){

   cont = cont + 1;
   if (Vazia())
     base = topo = new No(item);
   else {
     topo.setProx(new No(item));
     topo = topo.getProx();

   }
 }

 public String Desempilha(){

   cont = cont - 1;
   if (Vazia()){
     return null;

   }
   String item = topo.getDado();
   if (base == topo)
     base = topo = null;
   else {
     No atual = base;
     while (atual.getProx() != topo)
       atual = atual.getProx();
       topo = atual;
       atual.setProx(null);

     }
   return item;
 }

 public boolean Vazia(){

   return base == null;
 }

 public String Topo(){
   return topo.getDado();
 }

 public int Elementos(int cont){

   return cont;

 }

 public int Par(int cont){
    if (cont % 2 == 0){
    
      return cont / 2;
    
    } else {
      return cont  / 2 + 1;
    }
  }
  public int Impar(int cont){
    if (cont % 2 != 0){
      cont = cont - 1;
   
      return cont / 2;
    
    } else {
      return cont  / 2;
    }
  }

 public static void main(String[] args) {

   Main p1 = new Main();
   p1.Empilhar("primeirin");
   p1.Empilhar("segundin");
   p1.Empilhar("terceir√£o");
   p1.Empilhar("quarteto");
   p1.Empilhar("penta");

   p1.Par(cont);
   p1.Impar(cont);

   System.out.println(p1.Impar(cont));
   System.out.println(p1.Par(cont));
 
  
 }
}
